
<div class="row col-md-12">
	<div class="col-md-2">
	</div>
	<div class="col-md-8">
		<h3>Customers List</h3>
		<%= link_to '<button type="button" class="btn btn-primary">New Customer</button>'.html_safe, new_cliente_path %>
		<%= link_to '<button type="button" class="btn btn-primary">Export to XLS</button>'.html_safe, clientes_exportXLS_path %>
		<%= link_to '<button type="button" class="btn btn-primary">Export to PDF</button>'.html_safe, clientes_exportPDF_path %>
		<table id="datosClientes" class="table table-striped table-bordered" cellspacing="0" width="50%">
			<thead>
				<tr>
					<td class="th-sm">Customer Num.</td>
					<td class="th-sm">Name</td>
					<td class="th-sm">CIF</td>
					<td class="th-sm">Actions</td>
				</tr>
			</thead>
			<tbody>
				<% @clientes.each do |c| %>
					<tr>
						<td><%= c.idCliente %></td>
						<td><%= c.Nombre %></td>
						<td><%= c.CIF %></td>
						<td>
							<%= link_to '<i class="fas fa-pen"></i>'.html_safe, edit_cliente_path(c), method: :get %>
							<%= link_to '<i class="fas fa-trash"></i>'.html_safe, cliente_path(c), method: :delete, data: { confirm: 'Are you sure?' } %> 
							<%= link_to '<i class="fas fa-eye"></i>'.html_safe, cliente_path(c) %>							
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<div class="col-md-2">
	</div>	
</div>

