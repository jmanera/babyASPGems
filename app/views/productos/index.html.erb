
<div class="row col-md-12">
	<div class="col-md-2">
	</div>
	<div class="col-md-8">
		<h3>Products List</h3>
		<%= link_to '<button type="button" class="btn btn-primary">New Product</button>'.html_safe, new_producto_path %>
		<table id="datosProductos" class="table table-striped table-bordered" cellspacing="0" width="50%">
			<thead>
				<tr>
					<td class="th-sm">Name</td>
					<td class="th-sm">Description</td>
          <td class="th-sm">Stock</td>
          <td class="th-sm">Price</td>
					<td class="th-sm">Actions</td>
				</tr>
			</thead>
			<tbody>
				<% @productos.each do |c| %>
					<tr>
						<td><%= c.Nombre %></td>
						<td><%= c.Descripcion %></td>
            <td><%= c.Stock %></td>
            <td><%= c.Precio_Unitario %></td>
						<td>
							<%= link_to '<i class="fas fa-pen"></i>'.html_safe, edit_producto_path(c), method: :get %>
							<%= link_to '<i class="fas fa-trash"></i>'.html_safe, producto_path(c), method: :delete, data: { confirm: 'Are you sure?' } %>
							<%= link_to '<i class="fas fa-eye"></i>'.html_safe, producto_path(c) %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<div class="col-md-2">
	</div>	
</div>

