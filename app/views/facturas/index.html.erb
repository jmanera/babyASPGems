<div class="row col-md-12">
	<div class="col-md-2">
	</div>
	<div class="col-md-8">
		<h3>Billing List</h3>
		<%= link_to '<button type="button" class="btn btn-primary">New Bill</button>'.html_safe, new_factura_path %>
		<%= link_to '<button type="button" class="btn btn-primary">Export to XLS</button>'.html_safe, facturas_exportXLS_path %>
		<%= link_to '<button type="button" class="btn btn-primary">Export to PDF</button>'.html_safe, facturas_exportPDF_path %>
		<table id="datosFacturas" class="table table-striped table-bordered" cellspacing="0" width="50%">
			<thead>
				<tr>
					<td class="th-sm">Bill Num.</td>
					<td class="th-sm">Date</td>
					<td class="th-sm">Customer</td>
					<td class="th-sm">Actions</td>
				</tr>
			</thead>
			<tbody>
				<% @facturas.each do |f| %>
					<tr>
						<td><%= f.NumFactura %></td>
						<td><%= f.Fecha.strftime("%d-%m-%Y") %></td>
						<td><%= f.Cliente %></td>
						<td>
							<%= link_to '<i class="fas fa-pen"></i>'.html_safe, edit_factura_path(f), method: :get %>
							<%= link_to '<i class="fas fa-trash"></i>'.html_safe, factura_path(f), method: :delete, data: { confirm: 'Are you sure?' } %> 
							<%= link_to '<i class="fas fa-eye"></i>'.html_safe, factura_path(f) %>
							<%= link_to '<i class="fas fa-print"></i>'.html_safe, facturas_printPDF_path(f) %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<div class="col-md-2">
	</div>	
</div>
